<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory >
        <property name = "connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="connection.url">jdbc:mysql://localhost:3306/quantour?serverTimezone=UTC&amp;useUnicode=true&amp;characterEncoding=utf-8&amp;useSSL=false</property>
        <property name="connection.username">root</property>
        <property name="connection.password">123456</property>
        <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>

        <!-- 方便debug-->
        <property name="show_sql">true</property>
        <property name="format_sql">true</property>

        <!--便于当数据库中不存在需要添加的表或数据库时，系统自动创建-->
        <property name="hbm2ddl.auto">update</property>

        <!--映射hbm文件（类）-->
        <mapping class="com.edu.nju.asi.model.Stock"/>
        <mapping class="com.edu.nju.asi.model.DataSourceInfo"/>
        <mapping class="com.edu.nju.asi.model.StockSearch"/>
        <mapping class="com.edu.nju.asi.model.StockSituation"/>
        <mapping class="com.edu.nju.asi.model.User"/>
    </session-factory>
</hibernate-configuration>